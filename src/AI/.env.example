# ARKS RWA AI Service Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication
AUTH_TOKEN=your-secure-auth-token-here

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# SerpAPI Configuration
SERPAPI_API_KEY=your-serpapi-api-key-here
SERPAPI_RATE_LIMIT_MS=1000
SERPAPI_MAX_RETRIES=3
SERPAPI_TIMEOUT_MS=120000
SERPAPI_QUOTA_DAILY=1000
SERPAPI_CACHE_TTL_HOURS=24

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=*

# Indonesian Fraud Detection Settings
DEFAULT_REGION=Indonesia
DEFAULT_INDUSTRY=services

# Performance Tuning
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_TIMEOUT_MS=900000
EXTENDED_ANALYSIS_TIMEOUT_MS=900000
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENABLED=true

# Web Scraping Configuration
WEB_SCRAPING_ENABLED=true
PUPPETEER_HEADLESS=true
WEB_SCRAPING_TIMEOUT_MS=300000

# Extended Timeout Configuration (15 minutes for worst-case scenarios)
EXPRESS_SERVER_TIMEOUT_MS=960000
REQUEST_TIMEOUT_MS=900000
SERPAPI_EXTENDED_TIMEOUT_MS=300000

# Browser Fallback Configuration
DISABLE_BROWSER_FALLBACK=true
SERPAPI_ONLY_MODE=true
MIN_SERPAPI_DATA_THRESHOLD=2