# ARKS RWA AI Service Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Authentication
AUTH_TOKEN=your-secure-auth-token-here

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:4943,https://your-frontend-domain.com

# Indonesian Fraud Detection Settings
DEFAULT_REGION=Indonesia
DEFAULT_INDUSTRY=services

# Performance Tuning
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_TIMEOUT_MS=30000
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check
HEALTH_CHECK_ENABLED=true