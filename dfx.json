{
  "canisters": {
    "arks-core": {
      "main": "src/backend/core/main.mo",
      "type": "motoko",
      "domains": ["*"]
    },
    "arks-risk-engine": {
      "dependencies": ["arks-core"],
      "main": "src/backend/risk_engine/main.mo",
      "type": "motoko",
      "domains": ["*"]
    },
    "arks-identity": {
      "dependencies": ["arks-core"],
      "main": "src/backend/identity/main.mo",
      "type": "motoko",
      "domains": ["*"]
    },
    "arks-token-factory": {
      "dependencies": ["arks-core"],
      "main": "src/backend/token_factory/main.mo",
      "type": "motoko",
      "domains": ["*"]
    },
    "frontend": {
      "source": ["src/frontend/.next/build"],
      "type": "assets",
      "domains": ["*"]
    },
    "internet_identity": {
      "type": "custom",
      "candid": "https://raw.githubusercontent.com/dfinity/internet-identity/main/src/internet_identity/internet_identity.did",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz"
    }
  },
  "networks": {
    "local": {
      "bind": "0.0.0.0:4943",
      "type": "ephemeral",
      "domains": ["*"]
    },
    "ic": {
      "providers": ["https://icp-api.io"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "output_env_file": ".env",
  "version": 1
}